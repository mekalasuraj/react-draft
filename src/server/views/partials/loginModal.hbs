<div class="modal modal-login" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 id="loginModalLabel" class="modal-title text-center">Log in to your account</h4>
            </div>
            <div class="modal-body">
                <div class="login-form-container">
                    <form class="login-form" id="loginForm" method="POST" action="/login" data-toggle="validator">
                        <div class="form-group email">
                            <label class="sr-only" for="login-email">Your email</label>
                            <input class="form-control login-email" name="username" type="text" id="txtUsername" placeholder="Your Username" data-error="Is required" maxlength="30" required/>
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group password">
                            <label class="sr-only" for="login-password">Password</label>
                            <input class="form-control login-password" name="password" type="password" id="txtPassword" maxlength="25" placeholder="Password" data-error="Is required" required/>
                            <div class="help-block with-errors"></div>
                            <p class="forgot-password">
                                <a href="/forgot-password" id="resetpass-link">Forgot password?</a>
                            </p>
                        </div>
                        <div class="form-group field-validation-error" id="errorSummary"></div>
                        <button type="submit" class="btn btn-block btn-cta-primary">Log in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
